{% extends "base.njk" %}

{% block content %}
    <div>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-2">
                    <img class="rounded-circle" style="background-color: white"
                         width="150" src="//robohash.org/{{ profileName }}.png?set=set1&size=150x150"
                         alt="{{ profileName }}">
                </div>
                <div class="ml-2">
                    <div class="h1 m-0">{{ profileName }}</div>
                    <form action="{{ extendURL('/user/'+ profileName + '/follow') }}" method="post">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" id="postSubmit">Follow</button>
                    </form>
                </div>
            </div>
        </div>
        <h1>{{ title }}</h1>

        {% for post in data %}
            {% include "post.njk" %}
        {% endfor %}
    </div>
{% endblock %}
